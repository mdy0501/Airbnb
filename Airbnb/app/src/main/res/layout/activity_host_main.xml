<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/DeepGreen"
tools:context="com.android.airbnb.main.HostMainActivity">

    <FrameLayout
        android:id="@+id/host_main_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toTopOf="@+id/hostMainTabLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

<android.support.design.widget.TabLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hostMainTabLayout"
    android:layout_width="0dp"
    android:layout_height="65dp"
    android:background="@color/white"
    app:tabSelectedTextColor="@color/colorAccent"
    app:tabTextColor="@color/black"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="0dp"
    android:layout_marginRight="0dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="0dp"
    app:layout_constraintLeft_toLeftOf="parent">


    <android.support.design.widget.TabItem
        android:id="@+id/tabItemMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/message"
        android:text="메시지" />

    <android.support.design.widget.TabItem
        android:id="@+id/tabItemCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/calendar"
        android:text="달력" />

    <android.support.design.widget.TabItem
        android:id="@+id/tabItemRooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/rooms"
        android:text="숙소" />

    <android.support.design.widget.TabItem
        android:id="@+id/tabItemStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/statistics"
        android:text="통계" />

    <android.support.design.widget.TabItem
        android:id="@+id/tabItemProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:icon="@drawable/profile"
        android:text="프로필" />
</android.support.design.widget.TabLayout>

</android.support.constraint.ConstraintLayout>
